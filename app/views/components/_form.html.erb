
<%= simple_form_for(@flat) do |f| %>
    <% if @flat.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night, label: 'Price per night' %>
    <%= f.input :number_of_guests, label: 'How many guests?' %>
    <%= f.input :imgurl, label: "Would you like to give and image url?" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Cancel", flats_path, class: "btn btn-danger" %>
  </div>
<% end %>
